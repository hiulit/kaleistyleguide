<div>{{name}}</div>
<ul>
	{{#each tabs}}
	<li id="{{id}}" class="tab {{#if selected}}selected{{/if}}">
		<div class="filter-tabs--notification js-notification-count" style="display:none"></div>
		<a href="#">{{label}}</a>
	</li>
	{{/each}}
	<div class="post">
		<h1>By {{fullName author}}</h1>
		<div class="body">{{body}}</div>
		<h1>Comments</h1>
		{{#each comments}}
		<h2>By {{fullName author}}</h2>
		<div class="body">{{body}}</div>
		{{/each}}
	</div>
	<ul>
		{{#each items}}
		<li>{{agree_button}}</li>
		{{/each}}
	</ul>
</ul>